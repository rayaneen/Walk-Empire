<div class="profil" data-navbar-target="profil">
  <div class="container-fluidpd">
    <% if current_user != nil %>
      <div class="cardpd" style="width: 100%;">
        <div class="imagepd">
          <%= image_tag "https://i.postimg.cc/wBhzNQLm/MINEAVATAR.png", id:"avatarpd"%>
        </div>
        <h5 class="card-titlepd"><%= current_user.nickname  %></h5>
        <div class="card-bodypd">
        <div class="card-textpd">
          <p class=""><i class="fas fa-trophy"></i> Level: </p>
          <p class="user-lvl"> <%= current_user.xp %> </p>
          <p class=""><i class="fas fa-running"></i>Your last walk:</p>
          <p class="last-walk"><%= current_user.activities.last.distance %>m</p>
        </div>
          <ul class="ulpd">
          <button name="button" type="submit" class="btn cross" data-action="navbar#displayProfil">
              <i class="far fa-times-circle"></i>
          </button>

          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
