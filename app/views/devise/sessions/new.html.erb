<h2 style="text-align:center;">Welcome ! ðŸŽ‰</h2>

<div id="figma">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs" id="loginwe">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class:'emailwe'} %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class:'passwe' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in ô€„«", class:'btnlogin' %>
      <div class="d-flex justify-content-between">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "  Forgot Password?", new_password_path(resource_name), style: 'text-decoration: none;color: white;', class: 'mb-3' %><br />
        <% end %>
      </div>
    </div>
  <% end %>
<%= render "devise/shared/links" %>
</div>
