<div data-controller="create-activity">
  <div class="imageinfo">
    <%= image_tag "https://i.postimg.cc/TYZqLdCs/BUILDINGFRITEBLANCHE.png", id:"imginfo"%>
  </div>
  <h5 class="card-titleinfo"><%= control_point.name%></h5>
  <div class="cardinfo" style="width: 75%;">
    <p class="card-textinfo"><strong><%= control_point.user.nickname%> (lvl <%=control_point.user.xp %>)</strong> is controling this territory </p>
    <p class="card-textinfo">You need to walk <%= control_point.difficulty%> before pretending to claim it </p>
    <% unless current_user.has_an_activity_going_on?(control_point)%>
      <%= link_to "START CAPTURE", control_point_activities_path(current_user, control_point_id: control_point.id), method: "POST", class:"btn btn-info2"%>
    <% else %>
      <%= link_to "Cancel conquest", control_point_activities_path(current_user, control_point_id: control_point.id), class: "btn btn-light", method:"destroy"%>
    <% end %>
  </div>
